<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:height="50dp" android:width="50dp">
        <shape
            android:shape="rectangle" android:thickness="10dp" >
            <solid
                android:color="@color/endTime" />
        </shape>
    </item>
    <item android:height="76dp" android:width="50dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="100%"
            android:pivotY="0%" >
            <shape
                android:shape="rectangle"  >
                <stroke android:color="@color/timeDivider" android:width="2dp"/>
                <solid
                    android:color="@color/beginTime" />
            </shape>

        </rotate>
    </item>

</layer-list>