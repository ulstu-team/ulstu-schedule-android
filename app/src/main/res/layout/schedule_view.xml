<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:elevation="32dp"
    android:orientation="vertical"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/schedule_view_padding">

        <ImageView
            android:id="@+id/imgWeekColor"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="6dp"
            android:background="@drawable/blue_circle"
            android:contentDescription="@string/color_of_current_week" />

        <TextView
            android:id="@+id/tvDay"
            style="@style/ScheduleView.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/imgWeekColor"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/imgWeekColor"
            android:gravity="end"
            android:paddingStart="6dp"
            android:text="Понедельник,"
            android:textAllCaps="true"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tvDate"
            style="@style/ScheduleView.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tvDay"
            android:layout_toEndOf="@id/tvDay"
            android:paddingStart="8dp"
            android:text="27 ноября"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:id="@+id/lessonsContainer"
            android:layout_below="@id/tvDay"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/lessonContainer"
                style="@style/ScheduleView.LessonContainer">

                <TextView
                    style="@style/ScheduleView.LessonTime"
                    android:text="8:00" />

                <TextView
                    android:id="@+id/cabinet"
                    style="@style/ScheduleView.Cabinet"
                    android:text="а.г.503" />

                <TextView
                    android:id="@+id/lessonNumber"
                    style="@style/ScheduleView.LessonNumber"
                    android:text="1 пара" />

                <TextView
                    android:id="@+id/teacher"
                    style="@style/ScheduleView.Teacher"
                    android:text="Новосельцева Н.Н." />

                <TextView
                    android:id="@+id/lessonName"
                    style="@style/ScheduleView.Lesson"
                    android:text="пр.Ин.яз." />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lessonContainer"
                style="@style/ScheduleView.LessonContainer">

                <TextView
                    style="@style/ScheduleView.LessonTime"
                    android:text="8:00" />

                <TextView
                    android:id="@+id/cabinet"
                    style="@style/ScheduleView.Cabinet"
                    android:text="а.г.503" />

                <TextView
                    android:id="@+id/lessonNumber"
                    style="@style/ScheduleView.LessonNumber"
                    android:text="1 пара" />

                <TextView
                    android:id="@+id/teacher"
                    style="@style/ScheduleView.Teacher"
                    android:text="Новосельцева Н.Н." />

                <TextView
                    android:id="@+id/lessonName"
                    style="@style/ScheduleView.Lesson"
                    android:text="пр.Ин.яз." />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lessonContainer"
                style="@style/ScheduleView.LessonContainer">

                <TextView
                    style="@style/ScheduleView.LessonTime"
                    android:text="8:00" />

                <TextView
                    android:id="@+id/cabinet"
                    style="@style/ScheduleView.Cabinet"
                    android:text="а.г.503" />

                <TextView
                    android:id="@+id/lessonNumber"
                    style="@style/ScheduleView.LessonNumber"
                    android:text="1 пара" />

                <TextView
                    android:id="@+id/teacher"
                    style="@style/ScheduleView.Teacher"
                    android:text="Новосельцева Н.Н." />

                <TextView
                    android:id="@+id/lessonName"
                    style="@style/ScheduleView.Lesson"
                    android:text="пр.Ин.яз." />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lessonContainer"
                style="@style/ScheduleView.LessonContainer">

                <TextView
                    style="@style/ScheduleView.LessonTime"
                    android:text="8:00" />

                <TextView
                    android:id="@+id/cabinet"
                    style="@style/ScheduleView.Cabinet"
                    android:text="а.г.503" />

                <TextView
                    android:id="@+id/lessonNumber"
                    style="@style/ScheduleView.LessonNumber"
                    android:text="1 пара" />

                <TextView
                    android:id="@+id/teacher"
                    style="@style/ScheduleView.Teacher"
                    android:text="Новосельцева Н.Н." />

                <TextView
                    android:id="@+id/lessonName"
                    style="@style/ScheduleView.Lesson"
                    android:text="пр.Ин.яз." />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lessonsContainer"
            android:layout_below="@id/tvDay"
            android:layout_marginStart="56dp"
            android:layout_marginTop="8dp"
            android:background="@color/schedule_view_divider" />

    </RelativeLayout>

</android.support.v7.widget.CardView>