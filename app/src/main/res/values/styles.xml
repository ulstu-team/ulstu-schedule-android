<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/darkBlue</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.MenuItem" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

    <style name="ulstu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
    </style>

    <!-- Schedule View -->
    <style name="ScheduleView" />

    <style name="ScheduleView.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ScheduleView.LessonContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ScheduleView.LessonTime">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_toStartOf">@id/lessonName</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="ScheduleView.Teacher">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:layout_toEndOf">@id/cabinet</item>
    </style>

    <style name="ScheduleView.Lesson">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:layout_alignStart">@id/teacher</item>
        <item name="android:layout_below">@id/teacher</item>
        <item name="android:layout_toEndOf">@id/lessonNumber</item>
    </style>

    <style name="ScheduleView.Cabinet">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="ScheduleView.LessonNumber">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:layout_below">@id/cabinet</item>
    </style>
    <!-- End Schedule View -->

</resources>
