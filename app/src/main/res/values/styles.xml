<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.MenuItem" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>
    <style name="NavigationDrawerStyle">
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>
    <style name="TimeText">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TimeText.Little" parent="TimeText">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TimeText.Big" parent="TimeText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ulstu" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
    </style>

    <style name="Widget.AppTheme.ListView" parent="@android:style/Widget.ListView">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="AppTheme.List" parent="Theme.AppCompat">
        <item name="stickyListHeadersListViewStyle">@style/Widget.AppTheme.ListView</item>
    </style>
</resources>
